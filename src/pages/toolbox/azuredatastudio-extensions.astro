---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { getCollection } from 'astro:content';

const azuredatastudioExtensions = await getCollection('azuredatastudioExtensions');
---

<StarlightPage frontmatter={{ title: 'Azure Data Studio Extensions' }}>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

  {
    azuredatastudioExtensions.map((extension) => (
      <tr>
        <td>
          {extension.data.link ? (
            <a href={extension.data.link} target="_blank">{extension.data.name}</a>
          ) : (
          extension.data.name
          )}
        </td>
        <td>{extension.data.description}</td>
      </tr>
    ))
  }

</table>

</StarlightPage>