---
import { Icon } from '@astrojs/starlight/components';
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { getCollection } from 'astro:content';

const resources = await getCollection('resources');
---

<StarlightPage frontmatter={{ title: 'Resources', tableOfContents: false }}>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

  {
    resources.map((resource) => (
      <tr>
        <td>
          <span style="display: flex; align-items: center; text-wrap: nowrap;">
            {resource.data.name}
            {resource.data.externalLink ? (
              <a href={resource.data.externalLink} target="_blank"><Icon name='external' size="1rem" /></a>
            ) : ''}
          </span>
        </td>
        <td>{resource.data.description}</td>
      </tr>
    ))
  }

</table>

</StarlightPage>